// <<< Name >>> {
indicator(title='KB', shorttitle='KB', overlay=true,max_labels_count=500)  //}

// <<< User Inputs >>> {
//<<< Number of Pivots >>> {

cpr = input.int(title=' # of Pivots to Show ', defval=2, minval=0)


new_bar(res) =>
    ta.change(time(res)) != 0
new_period(condition, src) =>
    result = 0.0
    result := condition ? src : result[1]
    result  //}

// <<< Daily/Weekly/Monthly/Yearly Central Pivot >>> {

DP = input.bool(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='1', defval=false, title='D-CPR')
hideonDP = input(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='1', defval=true, title='Hide D-CPR on Intraday and 1D+') //}
WP = input.bool(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='2', defval=false,  title='W-CPR')
hideonWP = input(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='2', defval=true, title='Hide W-CPR on 1D+') //}
MP = input.bool(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='3', defval=false,  title='M-CPR')
hideonMP = input(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='3', defval=true, title='Hide M-CPR on 1W+') //}
YP = input.bool(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='4', defval=false, title='Y-CPR')
DCPR = input.bool(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='4', defval=false, title='Dvlp CPR')

MP1 = input(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='4', defval=false, title='CANDLE MP')
IB = input(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='4', defval=false, title='IB')
TBL = input.bool(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='4', defval=false, title='CPR TBL')
TBL_POS = input.string(group='ðŸ”¨ DWMY CPR ðŸ”¨', inline='4', defval=position.bottom_right, title='', options=[position.bottom_right, position.bottom_left, position.bottom_center, position.top_right, position.top_left, position.top_center,position.middle_left,position.middle_right])

//}

// <<< Indicators >>> {
Ichimoku = input.bool(group='ðŸ”¨ IND ðŸ”¨', inline='1', defval=false, title='Ichimoku')
BB = input.bool(group='ðŸ”¨ IND ðŸ”¨', inline='1', defval=false, title='BB')
BB_DEV = input.int(group='ðŸ”¨ IND ðŸ”¨', inline='1', defval=1, title='')

PP = input.bool(group='ðŸ”¨ IND ðŸ”¨', inline='1', defval=true, title='Pivot Points')

//}

// <<< PP 1 Input >>> {
P1_ShowPP = input.bool(group='ðŸ”¨ Pivot Point A ðŸ”¨', inline='6', defval=false, title='Show Pivot Point A')
P1_PPO = input.bool(group='ðŸ”¨ Pivot Point A ðŸ”¨', inline='6', defval=true, title='Offset Next (Tomorrow\'s) Pivot', tooltip='ðŸ›‘ Note = Due to Holidays or unusual opening or closing timing in market. Offseting Pivot sometimes will not give accurate result.\n\nIn this case untick this option.')
P1_PPTF = input.string(group='ðŸ”¨ Pivot Point A ðŸ”¨', inline='7', defval='Auto', title='', options=['Auto', 'D', 'W', 'M', '12M'])
P1_PPM = input.string(group='ðŸ”¨ Pivot Point A ðŸ”¨', inline='7', defval='PivotBoss', title='', options=['Expanded', 'Camarilla', 'PivotBoss' ,'Traditional', 'Fibonacci', 'Woodie', 'Classic', 'DM'])
P1_PPT = input.string(group='ðŸ”¨ Pivot Point A ðŸ”¨', inline='7', defval='Next (Tomorrow\'s)', title='', options=['Current (Today\'s)', 'Next (Tomorrow\'s)'])
P1_PPOff = 0  // input(title="Offset", defval=0)


P1_PP = input.bool(title='P', defval=true, inline='8')
P1_TCBC = input.bool(title='TC/BC', defval=true, inline='8')
P1_S1R1 = input.bool(title='S1/R1', defval=false, inline='8')
P1_S2R2 = input.bool(title='S2/R2', defval=false, inline='8')
P1_S3R3 = input.bool(title='S3/R3', defval=false, inline='8')
P1_S4R4 = input.bool(title='S4/R4', defval=false, inline='8')
P1_S5R5 = input.bool(title='S5/R5', defval=false, inline='8')
P1_PHPL = input.bool(title='PH/PL', defval=true, inline='8')  //}

// <<< VWAP >>> {

VWAP = input.bool(title='VWAP', defval=true, inline='12', group='ðŸ”¨ VWAP ðŸ”¨') 
//VWAPval = input.source(title='', defval=hlc3, inline='12', group='ðŸ”¨ VWAP ðŸ”¨')
hideonDWM = input(title="Hide VWAP on 1D or Above", defval=true,inline='12', group='ðŸ”¨ VWAP ðŸ”¨')//}



// <<< MODIFIED PEMA CROSS OVER>>> {

M_PEMA_CO = input.bool(title='M_PEMA_CO', defval=false, inline='13', group='ðŸ”¨ MODIFIED PEMA CROSS OVER ðŸ”¨') //}
M_PEMA_CO_13 = input.bool(title='M_PEMA_CO_13', defval=true, inline='14', group='ðŸ”¨ MODIFIED PEMA CROSS OVER ðŸ”¨') //}
M_PEMA_CO_35 = input.bool(title='M_PEMA_CO_35', defval=true, inline='14', group='ðŸ”¨ MODIFIED PEMA CROSS OVER ðŸ”¨') //}
M_PEMA_CO_58 = input.bool(title='M_PEMA_CO_58', defval=true, inline='14', group='ðŸ”¨ MODIFIED PEMA CROSS OVER ðŸ”¨') //}

// <<< MA >>> {

MA = input.bool(group='ðŸ”¨ MA ðŸ”¨', inline='13', defval=true, title='MA')

MA1_C = input.bool(group='ðŸ”¨ MA ðŸ”¨',inline='14',defval=true,title='')
MA1 = input.string(group='ðŸ”¨ MA ðŸ”¨', inline='14', defval='EMA', title='', options=['PEMA', 'EMA', 'SMA'])
//MA1_S = input.float(group='ðŸ”¨ MA ðŸ”¨', inline='14',defval=hlc3, title='', options=[hlc3, close]  )
MA1_L = input.int(group='ðŸ”¨ MA ðŸ”¨', inline='14',defval=20, minval=0, title='' )
MA1_COL = input(group='ðŸ”¨ MA ðŸ”¨', inline='14',defval=color.new(color.white,0),title='' )

DMA = input.bool(group='ðŸ”¨ DMA ðŸ”¨', inline='15', defval=true, title='DMA')

MA2_C = input.bool(group='ðŸ”¨ DMA ðŸ”¨',inline='16',defval=false,title='')
MA2 = input.string(group='ðŸ”¨ DMA ðŸ”¨', inline='16', defval='SMA', title='', options=['SMA'])
MA2_L = input.int(group='ðŸ”¨ DMA ðŸ”¨', inline='16',defval=10, minval=0, title='' )
MA2_COL = input(group='ðŸ”¨ DMA ðŸ”¨', inline='16',defval=color.new(#5db9e7,0),title='' )

MA3_C = input.bool(group='ðŸ”¨ DMA ðŸ”¨',inline='17',defval=true,title='')
MA3 = input.string(group='ðŸ”¨ DMA ðŸ”¨', inline='17', defval='SMA', title='', options=['SMA'])
MA3_L = input.int(group='ðŸ”¨ DMA ðŸ”¨', inline='17',defval=21, minval=0, title='' )
MA3_COL = input(group='ðŸ”¨ DMA ðŸ”¨', inline='17',defval=color.new(#ffeb3b,0),title='' )

MA4_C = input.bool(group='ðŸ”¨ DMA ðŸ”¨',inline='18',defval=true,title='')
MA4 = input.string(group='ðŸ”¨ DMA ðŸ”¨', inline='18', defval='EMA', title='', options=['EMA'])
MA4_L = input.int(group='ðŸ”¨ DMA ðŸ”¨', inline='18',defval=23, minval=0, title='' )
MA4_COL = input(group='ðŸ”¨ DMA ðŸ”¨', inline='18',defval=color.new(#f86000,0),title='' )

MA5_C = input.bool(group='ðŸ”¨ DMA ðŸ”¨',inline='19',defval=true,title='')
MA5 = input.string(group='ðŸ”¨ DMA ðŸ”¨', inline='19', defval='SMA', title='', options=['SMA'])
MA5_L = input.int(group='ðŸ”¨ DMA ðŸ”¨', inline='19',defval=50, minval=0, title='' )
MA5_COL = input(group='ðŸ”¨ DMA ðŸ”¨', inline='19',defval=color.new(#cca4f2,0),title='' )

MA6_C = input.bool(group='ðŸ”¨ DMA ðŸ”¨',inline='20',defval=true,title='')
MA6 = input.string(group='ðŸ”¨ DMA ðŸ”¨', inline='20', defval='EMA', title='', options=['EMA'])
MA6_L = input.int(group='ðŸ”¨ DMA ðŸ”¨', inline='20',defval=65, minval=0, title='' )
MA6_COL = input(group='ðŸ”¨ DMA ðŸ”¨', inline='20',defval=color.new(#5454ad,0),title='' )

MA7_C = input.bool(group='ðŸ”¨ DMA ðŸ”¨',inline='21',defval=true ,title='')
MA7 = input.string(group='ðŸ”¨ DMA ðŸ”¨', inline='21', defval='SMA', title='', options=['SMA'])
MA7_L = input.int(group='ðŸ”¨ DMA ðŸ”¨', inline='21',defval=200, minval=0, title='' )
MA7_COL = input(group='ðŸ”¨ DMA ðŸ”¨', inline='21',defval=color.new(#d00030,0),title='' )


// <<< H/L >>> {
